<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_customer_payment_report_tree" model="ir.ui.view">
            <field name="name">customer.payment.report.tree</field>
            <field name="model">customer.payment.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="first_sales_date"/>
                    <field name="total_sale_count"/>
                    <field name="total_amount"/>
                    <field name="paid_amount"/>
                    <field name="balance_amount"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_customer_payment_report_form" model="ir.ui.view">
            <field name="name">customer.payment.report.form</field>
            <field name="model">customer.payment.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="first_sales_date"/>
                            <field name="total_sale_count"/>
                            <field name="total_amount"/>
                            <field name="paid_amount"/>
                            <field name="balance_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_customer_payment_report_form" model="ir.actions.act_window">
            <field name="name">Customer Payment Report</field>
            <field name="res_model">customer.payment.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Click to create a new record</p>
            </field>
        </record>

        <menuitem id="menu_reporting" name="Reporting"/>

        <!-- Sub-Menu for Customer Payment Report -->
        <menuitem id="menu_customer_payment_report" name="Customer Payment Report" parent="menu_reporting" action="action_customer_payment_report_form"/>
    </data>
</odoo>
